{
  "extends": "../../tsconfig.base.json",
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@mono/api": ["../../packages/api/dist/index.d.ts"],
      "@mono/api/*": ["../../packages/api/dist/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/api"
    }
  ]
}
